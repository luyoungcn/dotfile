# i3 config file

# choose your magic key
set $mod Mod4

# set window colors
# class                 border  bground text    indicator child_border
client.focused          #6272A4 #6272A4 #F8F8F2 #6272A4   #6272A4
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #282A36 #282A36 #BFBFBF #282A36   #282A36
client.urgent           #44475A #FF5555 #F8F8F2 #FF5555   #FF5555
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36

client.background       #F8F8F2


# pixel borders remove title bars completely because of compton shadows
for_window [class="^.*"] border pixel 5

# set desktop background
# exec --no-startup-id feh --bg-fill ~/tokyo-skyline.png
# exec --no-startup-id feh --bg-scale "$HOME/.oh-my-i3/wallpaper.jpg"
exec --no-startup-id feh --bg-fill "$HOME/.config/i3/wallpaper.jpg"

# shadows and transitions with compton
exec --no-startup-id compton --config ~/.config/i3/compton.conf -b
exec --no-startup-id fcitx5
exec --no-startup-id nutstore

# for virtualbox guest os Arch + i3
exec --no-startup-id VBoxClient-all

# i3-gaps
# smart_borders on      # borders only if more than one container in the workspace
# smart_gaps on         # gaps only if more than one container in the workspace
gaps inner 5           # global gap size


# ON STARTUP

# start apps automatically
exec --no-startup-id /usr/bin/nm-applet
# exec --no-startup-id dropbox start

# enable numlock
# exec --no-startup-id numlockx on

# set iinitial brightness
exec xrandr --output Virtual1 --brightness 0.8


# KEY BINDINGS

# brightness adjustment (pre-defined levels)
# bindsym $mod+Shift+F6 exec xrandr --output Virtual1 --brightness 1
# bindsym $mod+F6       exec xrandr --output Virtual1 --brightness 0.8
# bindsym $mod+F5       exec xrandr --output Virtual1 --brightness 0.5
# bindsym $mod+F7       exec xrandr --output Virtual1 --brightness 0.1

# volume control (increment)
bindsym $mod+F7 exec amixer -q sset Master 3%+
bindsym $mod+F6 exec amixer -q sset Master 3%-
bindsym $mod+F5 exec amixer -q sset Master toggle

# start a terminal
# bindsym $mod+Return exec urxvt
bindsym $mod+Return exec xfce4-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
# bindsym Mod1+d			    exec rofi -show drun -padding 80 -bw 0 -lines 8 -width 100% -location 1 -show-icons
bindsym Mod1+d			    exec rofi -show drun -theme ~/.config/rofi/default-theme.rasi

# start j4-dmenu-desktop (only displays applications shipping a desktop file. It is a wrapper around dmenu)
# bindsym $mod+d exec --no-startup-id j4-dmenu-desktop --dmenu="dmenu -i -fn 'Roboto-30' -l 5 -nb '#212121' -nf '#b7bbbd' -sb '#000000' -sf '#6da3a1'"
# bindsym $mod+d exec "dmenu_run -nf '#F8F8F2' -nb '#282A36' -sb '#6272A4' -sf '#F8F8F2' -fn 'monospace-10' -p 'dmenu%'"


# MANAGE WINDOWS

# change window focus
bindsym $mod+j            focus left
bindsym $mod+k            focus down
bindsym $mod+i            focus up
bindsym $mod+l            focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left         focus left
bindsym $mod+Down         focus down
bindsym $mod+Up           focus up
bindsym $mod+Right        focus right

# move focused window
bindsym $mod+Shift+j      move left
bindsym $mod+Shift+k      move down
bindsym $mod+Shift+i      move up
bindsym $mod+Shift+l      move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left   move left
bindsym $mod+Shift+Down   move down
bindsym $mod+Shift+Up     move up
bindsym $mod+Shift+Right  move right

# split in horizontal orientationud
bindsym $mod+h            split h

# split in vertical orientation
bindsym $mod+v            split v

# enter fullscreen mode for the focused container
bindsym $mod+f            fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s            layout stacking
bindsym $mod+w            layout tabbed
bindsym $mod+e            layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space  floating toggle

# change focus between tiling / floating windows
bindsym $mod+space        focus mode_toggle

# focus the parent container
bindsym $mod+a            focus parent

# focus the child container
#bindsym $mod+d           focus child


# SCREENSHOTS WITH MAIM

# take screenshot with Print key (requires maim)
# with Shift: take screenshot of active window
bindsym                 Print exec --no-startup-id maim                               ~/data/pictures/screenshots/$(date +%F-%T).png && notify-send "png screenshot taken"
bindsym --release Shift+Print exec --no-startup-id maim -i $(xdotool getactivewindow) ~/data/pictures/screenshots/$(date +%F-%T).png && notify-send "png screenshot of window taken"


# CONTROL i3

# reload the configuration file
bindsym Mod1+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym Mod1+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3 and end X session?' -b 'Yes, exit i3' 'i3-msg exit'"


# MANAGE WORKSPACES

# name the workspaces (icons require fontawesome)
set $tag1  "1:  term"
set $tag2  "2:  ie"
set $tag3  "3:  code"
set $tag4  "4:  fm"
set $tag5  "5: five"
set $tag6  "6: six"
set $tag7  "7: seven"
set $tag8  "8: eight"
set $tag9  "9: nine"
set $tag10 "10: ten"

# switch to workspace
bindsym $mod+1 workspace $tag1
bindsym $mod+2 workspace $tag2
bindsym $mod+3 workspace $tag3
bindsym $mod+4 workspace $tag4
bindsym $mod+5 workspace $tag5
bindsym $mod+6 workspace $tag6
bindsym $mod+7 workspace $tag7
bindsym $mod+8 workspace $tag8
bindsym $mod+9 workspace $tag9
bindsym $mod+0 workspace $tag10

# next/previous workspace
# bindsym $mod+Tab       workspace back_and_forth
bindsym $mod+Tab         workspace next
bindsym $mod+Shift+Tab   workspace prev

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $tag1
bindsym $mod+Shift+2 move container to workspace $tag2
bindsym $mod+Shift+3 move container to workspace $tag3
bindsym $mod+Shift+4 move container to workspace $tag4
bindsym $mod+Shift+5 move container to workspace $tag5
bindsym $mod+Shift+6 move container to workspace $tag6
bindsym $mod+Shift+7 move container to workspace $tag7
bindsym $mod+Shift+8 move container to workspace $tag8
bindsym $mod+Shift+9 move container to workspace $tag9
bindsym $mod+Shift+0 move container to workspace $tag10

# automatically start programs in specific workspaces on login
exec --no-startup-id i3-msg "workspace $tag1; exec xfce4-terminal"
exec --no-startup-id i3-msg "workspace $tag2; exec /usr/bin/google-chrome-stable"
exec --no-startup-id i3-msg "workspace $tag3; exec code"
exec --no-startup-id i3-msg "workspace $tag4; exec thunar"

# assign some applications to certain workspaces
# assign [class="Firefox"] $tag1
# assign [class="Visual Studio Code"] $tag3

# disable borders for some applications
# for_window [class="^Icedove$"] border none

# set specific apps to show as floating windows
for_window [class="^Viewnior$"] floating enable
# for_window [class="URxvt"] floating enable


# MOVE AND RESIZE WINDOWS

# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym i resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}


# START AND CONFIGURE i3bar
bar {
        # start using custom config file (full path)
        status_command       i3status -c ~/.config/i3/i3status.conf
        tray_padding         3
        font pango:Roboto    12

        colors {
                background #282A36
                statusline #F8F8F2
                separator  #44475A

                focused_workspace  #44475A #44475A #F8F8F2
                active_workspace   #282A36 #44475A #F8F8F2
                inactive_workspace #282A36 #282A36 #BFBFBF
                urgent_workspace   #FF5555 #FF5555 #F8F8F2
                binding_mode       #FF5555 #FF5555 #F8F8F2
        }

        # i3bar position
        position top

        # height of the bar in pixels
        height 29
}


# LOCK, SUSPEND KEYBINDS

bindsym Control+$mod+l exec --no-startup-id i3lock -i "$HOME/.config/i3/lock.png"
